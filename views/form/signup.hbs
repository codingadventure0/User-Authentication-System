<div class="signup-main-container">
    <div class="signup-div">
        <div id="flash-messages">
            {{#if error}}
                <p class="error">{{error}}</p>
            {{/if}}
        </div>
        <form action="/user/signup" method="post" onsubmit="return validateForm()">
            <h1>Signup Form</h1>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control"  placeholder="Enter your name" name="name" required>
                <i class="fa-solid fa-user"></i>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control"placeholder="eg:user@gmail.com" id="email" name="email" required>
            </div>
            <div class="form-group pwd-margin">
                <label for="pwd">Password:</label>
                <input type="password" class="form-control"placeholder="Enter password" id="pwd" name="password" required>
                <i class="fa-regular fa-eye-slash eye-icon" id="eyeIcon" onclick="togglePasswordVisibility()"></i> 
                {{!-- <i class="fa-regular fa-eye eye-icon"></i> --}}
                <div id="passwordSuggestion"></div>
            </div> <br>
            <div class="form-group pwd-margin">
                <label for="pwd2">Confirm Password:</label>
                <i class="fa-solid fa-lock" title="Your password is fully secure."></i>
                <input type="password" class="form-control" placeholder=" Enter password" id="pwd2" name="confpassword" required>
                <span id="passwordError" style="color: red; display: none; margin-bottom: 50px;">Passwords don't match</span>
            </div>
            <div class="select">
                <div class="form-group">
                    <label for="pwd">Role:</label>
                    <select name="role">
                        <option value="STUDENT">Student</option>
                        <option value="ADMIN">Admin</option>
                        <option value="TEACHER">Teacher</option>
                    </select>
                </div>
                <div class="form-group"> 
                    <label for="gender ">Gender:</label>
                    <select name="gender">
                        <option value="MALE">Male</option>
                        <option value="FEMALE">Female</option>
                        <option value="OTHER">Other</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Signup</button>
            <div class="already">
                <p>Already have account?&nbsp;<a href="/user/login">signin</a></p>
            </div>
        </form>
    </div>
</div>
<script src="/javascripts/script.js"></script>